<main>
      <!-- login user form -->
      <div class="login-dark">
        <form method="post">
          <h2 class="sr-only">Login</h2>
          <div class="illustration">
            <i class="icon ion-ios-locked-outline"></i>
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="email"
              name="email"
              placeholder="Email"
              id="email"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="password"
              name="password"
              placeholder="Password"
              id="password"
            />
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
              Log In
            </button>
          </div>
        </form>
      </div>
      <!-- create user form -->
